{
  "name": "vantage-fit-dashboard-automation",
  "version": "1.0.0",
  "description": "Automation framework for Vantage Fit Dashboard using Playwright",
  "scripts": {
    "test": "playwright test",
    "test:headed": "HEADED=true playwright test",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:chrome": "playwright test --project='Google Chrome'",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:safari": "playwright test --project=webkit",
    "test:edge": "playwright test --project='Microsoft Edge'",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "report": "playwright show-report",
    "test:createChallenge": "playwright test tests/create-challenge-navigation.spec.ts --headed --workers=1 --project='Google Chrome'",
    "test:customChallenge": "playwright test tests/E2E-flow-create_challenges/custom-challenge.spec.ts --headed --workers=1 --project='Chrome-local' ",
    "test:TargetAudienceCoverage": " playwright test tests/Test-Coverage-create_challenges/custom-challengeTargetAudience.spec.ts --headed --workers=1 --project='Chrome-local' ",
    "test:ChallengeConfigActivitytaskGrp1": "playwright test tests/CreateChallenge-Test_Cases/TestCoverage-ChallengeConfiguration/ActivityTask_Grp1/custom-challenge-challengeConfig.spec.ts --headed --workers=1 --project='Chrome-local'",
    "test:ChallengeConfigActivitytaskGrp2": "playwright test tests/CreateChallenge-Test_Cases/TestCoverage-ChallengeConfiguration/Activity_TaskGrp2/custom-challenge-challengeConfig.spec.ts --headed --workers=1 --project='Chrome-local'",
    "test:ChallengeConfigActivitytaskGrp3": "playwright test tests/CreateChallenge-Test_Cases/TestCoverage-ChallengeConfiguration/Activity_TaskGrp3/custom-challenge-challengeConfig.spec.ts --headed --workers=1 --project='Chrome-local'",
    "test:Manage_Challenge-Coverage": "playwright test tests/ManageChallenge-Test_Cases/Manage-challenge-Coverage.spec.ts --headed --workers=1 --project='chrome-local'",
    "test:Jorney_Challenge": "playwright test tests/E2E-flow-create_challenges/journey-challnege.spec.ts --headed --workers=1 --project='chrome-local'"
 
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/node": "^20.19.21",
    "playwright": "^1.56.0",
    "typescript": "^5.9.3"
  }
}
